<StageSelectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50

        Label:
            text: 'Select Stage'
            font_size: '36sp'
            size_hint: (1, 0.2)

        BoxLayout:
            orientation: 'vertical'
            id: level_buttons
            size_hint: (1, 0.6)
            spacing: 10

        Button:
            text: 'Back to Menu'
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.5}
            on_press: root.go_back()