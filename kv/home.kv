<HomePage>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: 'GeoDash Tee Barn'
            font_size: '48sp'
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: 0.2

        Button:
            text: 'Go to Play ➡️'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: root.go_to_level_selection(self)

        Button:
            text: 'Settings'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: root.go_to_settings(self)
