<HomePage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/image/background.png'  # Path to your PNG background image
            
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: 'GeoDash Tee Barn'
            font_size: '48sp'
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: 0.2

        Button:
            text: 'Play'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: root.go_to_level_selection(self)
        
        Button:
            text: 'Select Skin ðŸŽ¨'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: root.go_to_skin_selector(self)

        Button:
            text: 'Unlock All Levels ðŸ”“'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: root.unlock_all_levels(self)
        
        Button:
            text: 'Exit'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5}
            font_size: '24sp'
            on_press: app.stop()