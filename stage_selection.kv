<StageSelectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Select a Stage"
            font_size: 40
            size_hint_y: None
            height: 50
        Button:
            text: 'Stage 1'
            on_release:
                app.root.get_screen('game').set_background('assets/map_1.jpg')
                on_press: root.select_level("level1")
                app.root.current = 'game'
        Button:
            text: 'Stage 2'
            on_release:
                app.root.get_screen('game').set_background('assets/map_3.jpg')
                app.root.current = 'game'