# game.kv
<GameScreen>:
    FloatLayout:
        Image:
            id: background
            source: ''
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
        Player:
            id: player
            source: 'assets/cube_85.png'
            size_hint: None, None
            size: 50, 50
            center_x: self.parent.width / 2
            y: 100

        Platform:
            id: ground
            source: 'assets/platform.png'
            size_hint: None, None
            size: root.width, 20
            pos: 0, 0