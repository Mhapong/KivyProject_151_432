# game.kv
<GameScreen>:
    FloatLayout:
        Image:
            id: background
            source: ''
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
        Player:
            id: player
            source: 'assets/cube_85.png'
            size_hint: None, None
            size: 50, 50
            center_x: self.parent.width / 2
            y: 150  # Adjust the player's initial y position if needed

        Platform:
            id: ground1
            source: 'assets/platform.png'
            size_hint: None, None
            size: root.width, 20
            pos: 0, 100  # Set the ground higher

        Platform:
            id: ground2
            source: 'assets/platform.png'
            size_hint: None, None
            size: root.width, 20
            pos: root.width, 100  # Set the ground higher and to the right of the first ground

        Spike:
            id: spike
            size_hint: None, None
            size: 20, 20
            pos: root.width, 120  # Initial position off-screen
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1  # Red color for the spike
                Triangle:
                    points: [self.x, self.y, self.x + self.width / 2, self.y + self.height, self.x + self.width, self.y]